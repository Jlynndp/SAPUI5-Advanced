<mvc:View controllerName="logaligroup.Lists.controller.ListTypes"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m" displayBlock="true">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <IconTabBar>
                            <items>
                                <!--Listado de Objetos (<ObjectListItems>)-->
                                <IconTabFilter text="{i18n>objectList}">
                                    <List items="{path : '/Products',
                                                  filters : [{
                                                        path : 'Brand',
                                                        operator : 'EQ',
                                                        value1 : 'Compaq'
                                                    }]}">
                                        <items>
                                            <!--Material, Brand, Model, Price, Currency, Brand y Weight-->
                                            <ObjectListItem title="{Material} {Brand} {Model}" 
                                                            number="{Price}" numberUnit="{Currency}" 
                                                            type="Detail">
                                                <ObjectAttribute text="{Brand}"/>
                                                <ObjectAttribute text="{Weight}"/>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <!-- Listado EstÃ¡ndar (<StandardListItem>) -->
                                <IconTabFilter text="{i18n>standardList}">
                                    <Select selectedKey="{/typeSelection}">
                                        <core:Item key="None" text="{i18n>none}"/>
                                        <core:Item key="MultiSelect" text="{i18n>multiSelect}"/>
                                        <core:Item key="SingleSelect" text="{i18n>singleSelect}"/>
                                        <core:Item key="SingleSelectLeft" text="{i18n>singleSelectLeft}"/>
                                        <core:Item key="SingleSelectMaster" text="{i18n>singleSelectMaster}"/>
                                    </Select>
                                    <Button text="{i18n>showSelectedItems}" press="onShowSelectedRow" class="sapUiSmallMarginBegin"/>
                                    <Button text="{i18n>deleteSelectedItems}" press="onDeleteSelectedRow" class="sapUiSmallMarginBegin"/>
                                    <List id = "standardList"
                                          items="{path : '/Products',
                                                  sorter : {
                                                        path : 'Brand',
                                                        descending : false,
                                                        group : true
                                                    },
                                                    groupHeaderFactory : '.getGroupHeader'}"
                                            mode="{/typeSelection}">
                                    <!--Material, Brand, Model, Weight, Price, Currency-->
                                        <items>
                                            <StandardListItem title="{Material} {Brand} {Model}" 
                                                              description="{Weight}" 
                                                              info="{Price} {Currency}" 
                                                              type="Active"/>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <!-- Lista de Entrada (<InputListItem>) -->
                                <IconTabFilter text="{i18n>inputList}">
                                    <List items="{/Products}" mode="Delete" delete="onDeleteRow">
                                        <!--Brand, Properties-->
                                        <items>
                                            <InputListItem label="{Brand}">
                                                <Select items="{Properties}">
                                                    <core:Item key="{Id}" text="{Text}"/>
                                                </Select>
                                            </InputListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                
                                <!-- Listado de Notificaciones (<NotificationListItem>) -->
                                <IconTabFilter text="{i18n>notificationList}">
                                    <List items="{/News}">
                                        <!--News-->
                                        <items>
                                            <NotificationListItem title="{Title}" 
                                                                  description="{Description}"
                                                                  unread="{Unread}"
                                                                  authorName="{Author}"
                                                                  priority="{Priority}"
                                                                  showCloseButton="{ShowCloseButton}"/>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <!-- Listado Personalizado (<CustomListItem>)-->
                                <IconTabFilter text="{i18n>customList}">
                                    <List items="{/News}">
                                        <!--News-->
                                        <items>
                                            <CustomListItem >
                                                <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                                    <Text text="{Title}"/>
                                                    <Text text="{Author}"/>
                                                    <Text text="{Description}"/>
                                                </layout:Grid>
                                            </CustomListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                            </items>
                        </IconTabBar>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
