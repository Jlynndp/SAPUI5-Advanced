<mvc:View controllerName="logaligroup.Employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox direction="Row">
                            <!--Employee input-->
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" labelFor="inputEmployee" class="sapUiSmallMargin"/>
                            <!--<Input id="inputEmployee" value="{/EmployeeId}" maxLength="10" width = "200px" liveChange=".onLiveChange" class="sapUiSmallMarginEnd"/>-->
                            <Input id="inputEmployee" value="{/EmployeeId}" maxLength="10" width = "200px" class="sapUiSmallMarginEnd"/>
                            <!--Country selection-->
                            <Label id="labelCountry" text="{i18n>labelCountry}" labelFor="slCountry" visible = "true" class="sapUiSmallMargin" />
                            <Select id="slCountry" selectedKey="{/CountryKey}" forceSelection="false" items="{/ListCountry}" visible="true" class="sapUiSmallMarginEnd">
                                <items>
                                    <core:Item key="{key}" text="{text}"/>
                                    <!--
                                    <core:Item key="US" text="{i18n>CountryUS}"/>
                                    <core:Item key="UK" text="{i18n>CountryUK}"/>
                                    <core:Item key="ES" text="{i18n>CountryES}"/>-->
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <HBox>
                            <Panel>
                                <Table id="tableEmployee" items="{/Employees}">
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableId}"/>
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableName}"/>
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCountry}"/>
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCity}"/>
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Label text="{EmployeeID}"/>
                                                <Label text="{LastName}, {FirstName}"/>
                                                <Label text="{Country}"/>
                                                <Label text="{City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
